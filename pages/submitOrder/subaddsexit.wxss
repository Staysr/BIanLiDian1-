/* pages/submitOrder/submitOrder.wxss */
/*收货地址信息*/
.addressBox{
  height: 290rpx;
  width: 100%;
  border-radius: 16rpx;
  position: relative;
  overflow: hidden;
  color: #fff;
}
.addressBoxBg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 290rpx;
  z-index: 0;
}
.addressTitle{
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 20rpx;
  width: 100%;
  font-size: 30rpx;
  height: 72rpx;
  line-height: 72rpx;
  box-sizing: border-box;
  z-index: 1;
}
.addressContent{
  position: absolute;
  top: 72rpx;
  left: 0;
  width: 100%;
  padding: 0 20rpx;
  height: 125rpx;
  border-bottom: 1rpx solid #fff;
  box-sizing: border-box;
  z-index: 1;
}
.addressLocation{
  padding-right: 65rpx;
  position: relative;
  display: inline-block;
  margin-top: 12rpx;
}
.addressLocationIcon{
  position: absolute;
  right: 0;
  top: 16rpx;
  width: 12rpx;
  height: 22rpx;
}
.addressUser{
  font-size: 30rpx;
  margin-top: 10rpx;
}
.addressTime{
  width: 100%;
  padding: 0 20rpx;
  position: absolute;
  top: 197rpx;
  left: 0;
  font-size: 34rpx;
  margin-top: 25rpx;
  box-sizing: border-box;
  z-index: 1;
}
/*订单商品信息*/
.orderGoodBox{
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 20rpx;
  padding-bottom: 20px;
  margin-top: 37rpx;
  margin-bottom:100rpx;
}
.orderGoodTitle{
  font-size: 36rpx;
  color: #333;
  height: 98rpx;
  line-height: 98rpx;
}
/*订单合计以及提交*/
.submitOrderBox{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 94rpx;
  width: 100%;
  color: #fff;
}
.totalOrder{
  width: 73%;
  height: 94rpx;
  line-height: 94rpx;
  background-color: #333333;
  font-size: 36rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
}
.submitOrderBtn{
  width: 27%;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  background-color: #ff9b39;
}
.submitOrderNo{
  background-color: #ccc;
}

